# HeyReach MCP Server Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000

# HeyReach API Configuration (not needed for HTTP mode, API keys come from URL)
# HEYREACH_API_KEY=your_api_key_here
# HEYREACH_BASE_URL=https://api.heyreach.io/api/public

# Deployment Platform (vercel, railway, docker, etc.)
DEPLOYMENT_PLATFORM=vercel

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,DELETE,OPTIONS
CORS_HEADERS=Content-Type,mcp-session-id
CORS_EXPOSE_HEADERS=Mcp-Session-Id

# Security Configuration
ENABLE_DNS_REBINDING_PROTECTION=true
ALLOWED_HOSTS=127.0.0.1,localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting (if using nginx or custom middleware)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Session Management
SESSION_TIMEOUT_MS=3600000
MAX_CONCURRENT_SESSIONS=100
