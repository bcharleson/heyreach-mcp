{
  "mcpServers": {
    "heyreach": {
      "transport": {
        "type": "http",
        "url": "YOUR_MCP_SERVER_URL/mcp",
        "headers": {
          "X-API-KEY": "YOUR_HEYREACH_API_KEY_HERE"
        }
      }
    }
  }
}

